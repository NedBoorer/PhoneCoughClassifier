# Phone Cough Classifier - Production Environment Configuration
# Copy this file to .env and update values before deploying

# ===================
# Twilio Configuration (REQUIRED)
# ===================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+91XXXXXXXXXX

# ===================
# OpenAI Configuration (Optional - for future LLMdndn features)
# ===================
OPENAI_API_KEY=your_openai_api_key_here

# ===================
# Application Settings
# ===================
# Public URL for Twilio webhooks (use your production domain or ngrok for staging)
BASE_URL=https://your-production-domain.com

# Environment: development, staging, production
ENVIRONMENT=production

# Debug mode (MUST be false in production)
DEBUG=false

# ===================
# Database
# ===================
# For production, consider using PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./data/cough_classifier.db

# ===================
# Audio Settings
# ===================
MAX_RECORDING_DURATION=10
AUDIO_SAMPLE_RATE=16000

# ===================
# ML Model Settings
# ===================
MODEL_PATH=./models/cough_classifier.joblib
PARKINSONS_MODEL_PATH=./models/parkinsons_classifier.joblib
DEPRESSION_MODEL_PATH=./models/depression_classifier.joblib
USE_HEAR_EMBEDDINGS=true
SCREENING_MODEL_DEVICE=cpu

# ===================
# Health Screening (All enabled for production)
# ===================
ENABLE_RESPIRATORY_SCREENING=true
ENABLE_PARKINSONS_SCREENING=true
ENABLE_DEPRESSION_SCREENING=true

# ===================
# India Accessibility / Rural Features
# ===================
DEFAULT_LANGUAGE=hi
ENABLE_MULTILINGUAL=true
MISSED_CALL_CALLBACK_ENABLED=true
ENABLE_WHATSAPP_REPORTS=true

# Tele-Triage: eSanjeevani Government Helpline
# Reference: https://esanjeevaniopd.in/
DOCTOR_HELPLINE_NUMBER=+911234567890

# Risk thresholds for triggering interventions
HIGH_RISK_THRESHOLD=0.85
PESTICIDE_RISK_THRESHOLD=0.7
DUST_RISK_THRESHOLD=0.65

# ===================
# Farmer-Specific Features
# ===================
ENABLE_FARMER_SCREENING=true
ENABLE_FAMILY_SCREENING=true
